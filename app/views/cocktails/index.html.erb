<div class="banner">
  <div class="banner-content">
    <h1>Master Cocktail</h1>
    <%= link_to 'Create a cocktail', new_cocktail_path, class: "btn-medium"  %>
  </div>
</div>

<div class="container text-center">
  <h2>Browse all cocktails</h2>


  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <!-- <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1468465236047-6aac20937e92?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4b33fddb525a05644c19a67c7db3522e&auto=format&fit=crop&w=631&q=80');"> -->
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-description">
            <h2><%= cocktail.name.upcase %></h2>
          </div>
          <%= link_to '', cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>

  <hr>
</div>
