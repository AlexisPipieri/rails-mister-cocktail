<div class="banner">
  <div class="banner-content">
    <h1>Master Cocktail</h1>
    <%= link_to 'Create a cocktail', new_cocktail_path, class: "btn-medium"  %>
  </div>
</div>

<div class="container text-center">
  <h2>Browse all cocktails</h2>


  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo.nil? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), asset-url('default-photo.png');">
        <% else %>
          <div class="card"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                   url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <% end %>
          <div class="card-description">
            <h2><%= cocktail.name.upcase %></h2>
          </div>
          <%= link_to '', cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>

  <hr>
</div>
