<div class="container text-center">
  <h1><%= @cocktail.name.capitalize %></h1>
  <div class="ingredients-manager">
    <div class="ingredients">
      <h2>Ingredients:</h2>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
          <li>
            <div class="item">
              <div class="dose">
                <%= dose.ingredient.name.capitalize %>: <%= dose.description %>
              </div>
              <div class="delete-icon">
                <%= link_to dose_path(dose),
                      method: :delete,
                      data: { confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="add-ingredient-form">
      <h2>Add an ingredient</h2>
      <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
      <%# link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>


  <hr>
  <%= link_to 'Back to menu', cocktails_path %>
</div>
